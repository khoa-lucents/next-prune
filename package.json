{
	"name": "next-prune",
	"version": "1.6.0",
	"description": "Interactive terminal UI to prune Next.js build artifacts and caches to free disk space",
	"license": "MIT",
	"author": "next-prune contributors",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/khoa-lucents/next-prune.git"
	},
	"bugs": {
		"url": "https://github.com/khoa-lucents/next-prune/issues"
	},
	"homepage": "https://github.com/khoa-lucents/next-prune#readme",
	"keywords": [
		"nextjs",
		"next",
		"prune",
		"build",
		"artifacts",
		"cache",
		"vercel",
		"turbo",
		"clean",
		"cli",
		"terminal",
		"ui",
		"opentui",
		"disk-space",
		"webpack-cache"
	],
	"bin": {
		"next-prune": "src/cli.ts"
	},
	"type": "module",
	"packageManager": "bun@1.3.8",
	"engines": {
		"bun": ">=1.3.0"
	},
	"scripts": {
		"build": "bun build ./src/cli.ts --outdir ./dist --target bun --entry-naming cli.js",
		"dev": "bun run ./src/cli.ts",
		"lint": "prettier --check .",
		"test": "bun test",
		"bench:quick": "bun run bench/run-bench.ts --mode=run --scenario=quick",
		"bench:full": "bun run bench/run-bench.ts --mode=run --scenario=full",
		"bench:gate": "bun run bench/run-bench.ts --mode=gate --scenario=medium --threshold=0.1",
		"test:pilotty": "scripts/pilotty-smoke.sh",
		"check": "bun run lint && bun run test",
		"prepublishOnly": "bun run check && bun run build"
	},
	"files": [
		"dist",
		"src"
	],
	"dependencies": {
		"@opentui/core": "^0.1.77",
		"@opentui/react": "^0.1.77",
		"meow": "^14.0.0",
		"react": "^19.2.3"
	},
	"devDependencies": {
		"@types/react": "^19.2.6",
		"@vdemedes/prettier-config": "^2.0.1",
		"bun-types": "^1.3.8",
		"prettier": "^3.7.4",
		"typescript": "^5.9.3"
	},
	"prettier": "@vdemedes/prettier-config"
}
